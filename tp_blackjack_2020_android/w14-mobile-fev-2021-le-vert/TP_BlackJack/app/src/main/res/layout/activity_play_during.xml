<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="right"
                android:text="Dealer:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_dealer_hand"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="left"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/card_dealer_1"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/red_back"/>
                    <ImageView
                        android:id="@+id/card_dealer_3"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_toLeftOf="@id/card_dealer_1"
                        android:src="@drawable/red_back"
                        android:visibility="invisible"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <ImageView
                        android:id="@+id/card_dealer_2"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/red_back"/>
                    <ImageView
                        android:id="@+id/card_dealer_4"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_toRightOf="@+id/card_dealer_2"
                        android:src="@drawable/red_back"
                        android:visibility="invisible"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/card_dealer_5"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/card_dealer_7"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_toLeftOf="@id/card_dealer_5"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/card_dealer_6"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/card_dealer_8"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@+id/card_dealer_6"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="right"
                android:text="Your hand:"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tv_player_hand"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/quicksand_semibold"
                android:gravity="left"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/card_player_1"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/card_player_3"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_toLeftOf="@id/card_player_1"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/card_player_2"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/card_player_4"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@+id/card_player_2"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/card_player_5"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/card_player_7"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_toLeftOf="@id/card_player_5"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/card_player_6"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
                <ImageView
                    android:id="@+id/card_player_8"
                    android:layout_width="80dp"
                    android:layout_height="120dp"
                    android:layout_toRightOf="@+id/card_player_6"
                    android:src="@drawable/red_back"
                    android:visibility="invisible"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_play_hit"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:backgroundTint="#96ED9A"
                android:text="Hit"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"/>
            <Button
                android:id="@+id/btn_play_stand"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:backgroundTint="#ECA6A6"
                android:text="Stand"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_layout_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_end_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="You won!"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btn_play_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#DBC7FF"
                android:text="Play again"
                android:textAllCaps="false"
                android:textSize="20dp"
                android:layout_gravity="right"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="40dp"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_money_bet"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="20dp"
                android:src="@drawable/money"/>

            <TextView
                android:id="@+id/tv_balance_play_during"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="100$"
                android:textColor="@color/black"
                android:textSize="25dp" />
            <TextView
                android:id="@+id/tv23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="Bet:"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/tv_bet_during"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/quicksand_semibold"
                android:text="100$"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>





    </LinearLayout>
</RelativeLayout>